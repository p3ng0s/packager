pkgname=qflipper-p3ng0s
pkgver=0.1
pkgrel=1
pkgdesc="qflipper package for p3ng0s"
arch=("any")
url="https://flipperzero.one/update"
license=('NONE')
#depends=()
#sha1sums=('SKIP')

build() {
	curl -L 'https://update.flipperzero.one/builds/qFlipper/1.3.2/qFlipper-x86_64-1.3.2.AppImage' --output qFlipper
}

package() {
	install -D -m755 qFlipper $pkgdir/usr/bin/qFlipper
}
