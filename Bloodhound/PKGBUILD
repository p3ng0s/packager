pkgname=bloodhound-p3ng0s
pkgver=0.1
pkgrel=1
pkgdesc="bloodhound package for p3ng0s"
arch=("any")
url="https://portswigger.net/"
license=('NONE')
depends=('neo4j-community' 'electron')
#sha1sums=('SKIP')

build() {
	curl -L 'https://github.com/BloodHoundAD/BloodHound/releases/download/v4.3.1/BloodHound-linux-arm64.zip' --output bloodhound.zip
	unzip bloodhound.zip
	echo -e "#!/bin/bash\n/opt/pentest/BloodHound/BloodHound" > Bloodhound
}

package() {
	install -D -m755 Bloodhound $pkgdir/usr/bin/Bloodhound
	cd BloodHound-linux-x64
	find . -perm 755 -type f | xargs -I {} install -D -m755 {} $pkgdir/opt/pentest/BloodHound/{}
	find . -perm 644 -type f | xargs -I {} install -D -m644 {} $pkgdir/opt/pentest/BloodHound/{}
}
